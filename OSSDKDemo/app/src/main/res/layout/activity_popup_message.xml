<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PopupMessageActivity">

    <Button
        android:id="@+id/local_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/show_local_picture"/>
    <Button
        android:id="@+id/net_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/show_net_picture"/>
    <Button
        android:id="@+id/local_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/show_local_video"/>
    <Button
        android:id="@+id/net_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/show_net_video"/>

</LinearLayout>